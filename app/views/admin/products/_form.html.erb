<%= form_with(model: [ :admin, product], local: true, multipart: true) do |form| %>
  <% if product.errors.any? %>
    <div id="error_explanation">
      <h2>Erros ao salvar o produto:</h2>

      <ul>
      <% product.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row">
    <div class="col-lg-12">
      <div class="form-group">
        <%=form.label :title%>
        <%=form.text_field :title, :class => 'form-control' %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-lg-12">
      <div class="form-group">
        <%=form.label :description%>
        <%=form.text_area :description, :class => 'form-control' %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-lg-6">
      <div class="form-group">
        <%=form.label :ean%>
        <%=form.text_field :ean, :class => 'form-control' %>
      </div>
    </div>
    <div class="col-lg-6">
      <div class="form-group">
        <%=form.label :unity%>
        <%=form.select :unity, ["Unidade", "PeÃ§a", "Kilo", "Pack", "Pacote"], {},{:class => 'form-control'} %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-lg-6">
      <div class="form-group">
        <%=form.label :image%>
        <%=form.file_field :image, :class => 'form-control' %>
      </div>
    </div>
    <div class="col-lg-6">
      <div class="form-group">
        <%=form.label :category%>
        <%=form.select :category_id, options_for_select(Category.all.map{|c|[c.title, c.id]}), {},{:class => 'form-control'} %>
      </div>
    </div>
  </div>
  <hr>
  <div class="row">
    <div class="col-lg-12">
      <%=form.submit "Salvar Produto", :class => "btn btn-primary"%>
    </div>
  </div>
<%end%>