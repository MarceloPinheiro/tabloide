<h1>Produtos</h1>
<br>
<div class="row">
  <div class="col-lg-12" style="text-align:right">
    <%=link_to "Novo Produto",new_admin_product_url(), :class => "btn btn-primary"%>
  </div>
</div>
<hr>
<div class="row">
  <div class="col-lg-12">
    <table class="table table-striped">
      <thead>
        <tr>
          <th>id</th>
          <th>Produto</th>
          <th>Código de Barras</th>
          <th>Unidade de Medida</th>
          <th>Ações</th>
        </tr>
      </thead>
      <tbody>
        <%@products.each do |product|%>
          <tr>
            <td><%=product.id%></td>
            <td><%=product.title%></td>
            <td><%=product.ean%></td>
            <td><%=product.unity%></td>
            <td>
              <p><%=link_to "editar", edit_admin_product_url(product), :class => 'btn btn-sm btn-outline-info'%></p>
              <p><%=link_to "mostrar", admin_product_url(product), :class => 'btn btn-sm btn-outline-secondary' %></p>
            </td>
          </tr>
        <%end%>
      </tbody>
    </table>
  </div>
</div>
